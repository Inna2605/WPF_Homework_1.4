<Window x:Class="WPF_Homework_1._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Homework_1._4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black" Height="413" Width="363">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Button Margin="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">Button</Button>
        <Button Margin="3" Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">Button</Button>
                
        <Button Margin="3" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">Button</Button>
        <Button Margin="3" Grid.Row="1" Grid.Column="1">Button</Button>
                                                     
        <Button Margin="3" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">Button</Button>
    </Grid>
</Window>
